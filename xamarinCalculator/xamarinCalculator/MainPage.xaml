<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="xamarinCalculator.MainPage">

    <StackLayout x:Name="outerStack" Orientation="Vertical">
        <Label
            Text="Simple calculator"
            HorizontalOptions="CenterAndExpand"
            VerticalOptions="Start"
            FontAttributes="Bold"
            FontSize="Medium"
            />

        <!--Tasti-->
        <Grid Margin="65">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <!--presto cambiate con label di output-->
            <Label
                x:Name="lblOutput"
                HorizontalTextAlignment="Center"
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="4"
                />

            <!--prima riga-->
            <Button
                x:Name="btnC"
                Grid.Row="1"
                Grid.Column="0"
                Text="C"
                Clicked="PoppingChar"
                />
            <Button
                x:Name="btnCE"
                Grid.Row="1"
                Grid.Column="1"
                Text="CE"
                Clicked="DeleteExpression"
                />
            <Button
                x:Name="btnMod"
                Grid.Row="1"
                Grid.Column="2"
                Text="%"
                Clicked="AddingChar"
                />
            <Button
                x:Name="btnDiv"
                Grid.Row="1"
                Grid.Column="3"
                Text="/"
                Clicked="AddingChar"
                />

            <!--seconda riga-->
            <Button
                x:Name="btn7"
                Text="7"
                Grid.Row="2"
                Grid.Column="0"
                Clicked="AddingChar"
                />
            <Button
                x:Name="btn8"
                Text="8"
                Grid.Row="2"
                Grid.Column="1"
                Clicked="AddingChar"
                />
            <Button
                x:Name="btn9"
                Text="9"
                Grid.Row="2"
                Grid.Column="2"
                Clicked="AddingChar"
                />
            <Button
                x:Name="btnX"
                Text="*"
                Grid.Row="2"
                Grid.Column="3"
                Clicked="AddingChar"
                />

            <!--terza riga-->
            <Button
                x:Name="btn4"
                Text="4"
                Grid.Row="3"
                Grid.Column="0"
                Clicked="AddingChar"
                />
            <Button
                x:Name="btn5"
                Text="5"
                Grid.Row="3"
                Grid.Column="1"
                Clicked="AddingChar"
                />
            <Button
                x:Name="btn6"
                Text="6"
                Grid.Row="3"
                Grid.Column="2"
                Clicked="AddingChar"
                />
            <Button
                x:Name="btnMin"
                Text="-"
                Grid.Row="3"
                Grid.Column="3"
                Clicked="AddingChar"
                />

            <!--quarta riga-->
            <Button
                x:Name="btn1"
                Text="1"
                Grid.Row="4"
                Grid.Column="0"
                Clicked="AddingChar"
                />
            <Button
                x:Name="btn2"
                Text="2"
                Grid.Row="4"
                Grid.Column="1"
                Clicked="AddingChar"
                />
            <Button
                x:Name="btn3"
                Text="3"
                Grid.Row="4"
                Grid.Column="2"
                Clicked="AddingChar"
                />
            <Button
                x:Name="btnPlus"
                Text="+"
                Grid.Row="4"
                Grid.Column="3"
                Clicked="AddingChar"
                />

            <!--quinta riga-->
            <Button
                x:Name="btnSpace"
                Text=" "
                Grid.Row="5"
                Grid.Column="0"
                Clicked="AddingChar"
                BackgroundColor="Transparent"
                />
            <Button
                x:Name="btn0"
                Text="0"
                Grid.Row="5"
                Grid.Column="1"
                Clicked="AddingChar"
                />
            <Button
                x:Name="btnComma"
                Text=","
                Grid.Row="5"
                Grid.Column="2"
                Clicked="AddingChar"
                />
            <Button
                x:Name="btnEqual"
                Text="="
                Grid.Row="5"
                Grid.Column="3"
                Clicked="CalculateResult"
                />

            <Button
                Grid.Row="6"
                Grid.ColumnSpan="4"
                Text="scientific calculator"
                VerticalOptions="Center"
                />
        </Grid>
    </StackLayout>
</ContentPage>